// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  email         String   @unique
  dateOfBirth   DateTime
  phoneNumber   String   @unique
  verified      Boolean  @default(false)
  locked        Boolean  @default(false)
  lastLogin     DateTime?

  allergies     UserAllergy[]
  otps          UserOtp[]
  hostedEvents  Event[]
  sentInvitations    EventInvitation[] @relation("SentInvitations")
  receivedInvitations EventInvitation[] @relation("ReceivedInvitations")
  attendances EventAttendee[]
  segmentAttendances EventSegmentAttendee[]
}

model UserAllergy {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])
  allergy String
}

model UserOtp {
  id       String   @id @default(uuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  otp      String
  expiry   DateTime

  @@unique([userId, otp])
}

model Event {
  id        String   @id @default(uuid())
  name      String
  description String
  date      DateTime
  icon      String
  hostId    String
  host      User     @relation(fields: [hostId], references: [id])
  location  String
  segments  EventSegment[]
  invitations EventInvitation[]
  attendees EventAttendee[]
}

model EventAttendee {
  id      String @id @default(uuid())
  userId  String
  eventId String

  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event   Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model EventSegment {
  id        String   @id @default(uuid())
  name      String
  eventId   String
  event     Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  attendees EventSegmentAttendee[]
}

model EventSegmentAttendee {
  id           String   @id @default(uuid())
  userId       String
  segmentId    String

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  segment      EventSegment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  contributions EventSegmentAttendeeContribution[]
}

model EventSegmentAttendeeContribution {
  id          String   @id @default(uuid())
  item        String
  description String
  quantity    Int
  eventSegmentAttendeeId  String

  eventSegmentAttendee    EventSegmentAttendee @relation(fields: [eventSegmentAttendeeId], references: [id], onDelete: Cascade)
}

model EventInvitation {
  id          String   @id @default(uuid())
  senderId    String
  sender      User     @relation("SentInvitations", fields: [senderId], references: [id])
  recipientId String
  recipient   User     @relation("ReceivedInvitations", fields: [recipientId], references: [id])
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  message     String
  viewed      Boolean  @default(false)
  rsvpStatus  String   @default("Pending")
}