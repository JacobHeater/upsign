// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  allergies     UserAllergy[]
  email         String   @unique
  dateOfBirth   DateTime
  phoneNumber   String   @unique
  verified      Boolean  @default(false)
  locked        Boolean  @default(false)
  lastLogin     DateTime?

  otps          UserOtp[]
  attendances   EventAttendee[]
  hostedEvents  Event[]
  sentInvitations    EventInvitation[] @relation("SentInvitations")
  receivedInvitations EventInvitation[] @relation("ReceivedInvitations")
}

model UserAllergy {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])
  allergy String
}

model UserOtp {
  id       String   @id @default(uuid())
  userId   String
  otp      String
  expiry   DateTime

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, otp])
}

model Event {
  id        String   @id @default(uuid())
  name      String
  date      DateTime
  hostId    String
  location  String

  host      User     @relation(fields: [hostId], references: [id])
  segments  EventSegment[]
}

model EventSegment {
  id        String   @id @default(uuid())
  name      String
  eventId   String

  event     Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  attendees EventAttendee[]
}

model EventAttendee {
  id           String   @id @default(uuid())
  userId       String
  segmentId    String

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  segment      EventSegment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  contributions EventAttendeeContribution[]
}

model EventAttendeeContribution {
  id          String   @id @default(uuid())
  item        String
  description String
  quantity    Int
  attendeeId  String

  attendee    EventAttendee @relation(fields: [attendeeId], references: [id], onDelete: Cascade)
}

model EventInvitation {
  id          String   @id @default(uuid())
  senderId    String
  recipientId String
  message     String
  viewed      Boolean  @default(false)
  rsvpStatus  String   @default("Pending")

  sender      User     @relation("SentInvitations", fields: [senderId], references: [id])
  recipient   User     @relation("ReceivedInvitations", fields: [recipientId], references: [id])
}