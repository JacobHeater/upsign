// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  firstName   String
  lastName    String
  email       String   @unique
  dateOfBirth DateTime
  phoneNumber String   @unique
  verified    Boolean
  locked      Boolean
  lastLogin   DateTime?
  allergies   UserAllergy[]
  otps        UserOtp[]
  attendances EventAttendee[]
  segmentAttendances EventSegmentAttendee[]
  hostedEvents Event[]
  sentInvitations EventInvitation[] @relation("Sender")
  receivedInvitations EventInvitation[] @relation("Recipient")
  chatMessages EventChatMessage[]
  reactions EventChatMessageReaction[]
}

model UserAllergy {
  id       String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId   String
  allergy  String
  user     User @relation(fields: [userId], references: [id])
  @@unique([userId, allergy])
}

model UserOtp {
  id       String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId   String
  user     User @relation(fields: [userId], references: [id])
  otp      String
  expiry   DateTime
  consumed Boolean
}

model Event {
  id          String @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  date        DateTime
  icon        String
  hostId      String
  host        User @relation(fields: [hostId], references: [id])
  location    String
  cancelled   Boolean @default(false)
  segments    EventSegment[]
  attendees   EventAttendee[]
  invitations EventInvitation[]
  chatMessages EventChatMessage[]
}

model EventChatMessage {
  id        String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User @relation(fields: [userId], references: [id])
  eventId   String
  event     Event @relation(fields: [eventId], references: [id])
  message   String
  reactions EventChatMessageReaction[]
}

model EventChatMessageReaction {
  id        String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messageId String
  message   EventChatMessage @relation(fields: [messageId], references: [id])
  userId    String
  user      User @relation(fields: [userId], references: [id])
  reaction  String
  @@unique([messageId, userId, reaction])
}

model EventSegment {
  id        String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  eventId   String
  event     Event @relation(fields: [eventId], references: [id])
  attendees EventSegmentAttendee[]
  @@unique([eventId, name])
}

model EventInvitation {
  id          String @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  senderId    String
  sender      User @relation("Sender", fields: [senderId], references: [id])
  recipientId String
  recipient   User @relation("Recipient", fields: [recipientId], references: [id])
  eventId     String
  event       Event @relation(fields: [eventId], references: [id])
  message     String
  viewed      Boolean
  rsvpStatus  String
}

model EventAttendee {
  id      String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId  String
  eventId String
  user    User @relation(fields: [userId], references: [id])
  event   Event @relation(fields: [eventId], references: [id])
  @@unique([userId, eventId])
}

model EventSegmentAttendee {
  id            String @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User @relation(fields: [userId], references: [id])
  segmentId     String
  segment       EventSegment @relation(fields: [segmentId], references: [id])
  contributions EventSegmentAttendeeContribution[]
  @@unique([userId, segmentId])
}

model EventSegmentAttendeeContribution {
  id                      String @id @default(cuid())
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  item                    String
  description             String
  quantity                Int
  eventSegmentAttendeeId  String
  eventSegmentAttendee    EventSegmentAttendee @relation(fields: [eventSegmentAttendeeId], references: [id])
  @@unique([eventSegmentAttendeeId, item])
}
