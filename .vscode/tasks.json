{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-app",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "group": "build",
      "isBackground": true
    },
    {
      "label": "dev-api",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "group": "build",
      "isBackground": true
    },
    {
      "label": "dev",
      "dependsOn": ["dev-app", "dev-api"],
      "dependsOrder": "parallel",
      "group": "build"
    }
  ]
}
